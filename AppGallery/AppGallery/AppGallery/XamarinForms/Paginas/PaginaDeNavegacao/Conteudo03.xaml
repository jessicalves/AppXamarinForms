<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Conteúdo 03"
             NavigationPage.HasBackButton="False"
             x:Class="AppGallery.XamarinForms.Paginas.PaginaDeNavegacao.Conteudo03">
    <ContentPage.Content>
        <StackLayout>

            <Button Text="Inserir Pagina na Pilha" Clicked="InserirPaginaNaPilha"/>
            <Button Text="Remover Pagina da Pilha" Clicked="RemoverPaginaPilha"/>

            <Label Text="Página de Conteúdo 03"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Button Text="Voltar" Clicked="VoltarParaPaginaAnterior" />
            <Button Text="Voltar Para o Inicio da Pilha" Clicked="VoltarParaInicio" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>